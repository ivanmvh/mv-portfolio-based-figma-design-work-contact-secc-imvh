@media only screen and (min-width: 768px) {
  .sec-works-pc {
  /*  
      width: 1440px;
      height: 1644px;
      background-image: url("../resources/Group-117.png");
      background-repeat: no-repeat;
      background-position:center;
  */    
    display: inline-grid;
    grid-gap: 0px;
    grid-template-areas: 
      "s-1-1"
      "s-1-2"
      "s-2-2"
      "s-3-2"
      "s-3-3"; 
    grid-template-areas: 
      "s-1-1 s-1-2  s-1-2"
      "s-1-1 s-2-2  s-3-2"
      "s-1-1 s-2-2  s-3-3";
    margin: 0; 
    width: 100vw;
    height: auto;     
  }

  .s-1-1 {
    grid-row-start: 1;
    grid-row-end: 4;
    grid-column-start: 1;
    grid-column-end: 2;
}

  .s-1-2 {
    grid-row-start: 1;
    grid-row-end: 2;
    grid-column-start: 2;
    grid-column-end: 4;
  } 

  .s-2-2 {
    grid-row-start: 2;
    grid-row-end: 4;
    grid-column-start: 2;
    grid-column-end: 3;
  }

}


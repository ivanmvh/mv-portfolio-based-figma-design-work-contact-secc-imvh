*,
*::before,
*::after {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  text-decoration: none;
}

:root {
  --black: #1c1a19;
  --wine: #730d15;
  --red: #ff6b00;
  --gray: gray;
  --gray2: #262626;
  --white: #f4f5f0;
  --color-neutral-11: #730d15;
  --color-primary-1: #ff6b00;
  --color-neutral-2: gray;
}

body {
  background-color: #e5e5e5;
  /*width: 100%;*/
}

.logo {
  margin-left: 0;
  margin-top: 0;
}

.menu-hamburg {
  color: #000;
  width: 1fr;
  margin-right: 20px;
}

header {
  width: 100%;
  height: 100px;
  display: flex;
  justify-content: space-between;
  margin-top: 0;
}

nav {
  margin-top: 19px;
  margin-right: 16px;
}

.menu {
  display: none;
  flex-direction: column;
  align-items: left;
  justify-content: flex-start;
  width: 100%;
}

@media only screen and (min-width: 768px) {
  body {
    background-color: #e5e5e5;
  }

  .logo {
    display: none;
  }

  #id-menu-hamburger {
    display: none;
  }

  nav {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
  }

  .menu {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-evenly;
    width: 50%;
  }

  .menu-option {
    font-family: 'Poppins', sans-serif;
    font-style: normal;
    font-weight: 400;
    font-size: 16px;
    line-height: 24px;
    text-align: right;
    list-style-type: none;
  }
}

